[colors]
background = #D9D8D9
background-alt = #172946 
foreground = #172946
foreground-alt = #D9D8D9
red = #C9D8D9




[bar/mybar]
width = 100%
height = 30pt
radius = 0

; dpi = 100

background = ${colors.background}
foreground = ${colors.foreground}

; line-size = 3pt
; border-size = 0
; border-color = #FFFFFF00
padding-left = 0
padding-right = 0
module-margin = 2

font-0 = "JetBrainsMono Nerd Font:size=13;4" 
font-1 = Inter
font-2 = "JetBrainsMono Nerd Font"

modules-left = i3
modules-center = xwindow media media-previous media-play media-next
modules-right = pulseaudio xkeyboard wlan battery date 

cursor-click = pointer
cursor-scroll = ns-resize

enable-ipc = true

; tray-position = none
; tray-padding = 0

; wm-restack = i3

; override-redirect = true

[module/i3]
type = internal/i3
strip-wsnumbers = true
index-sort = true
pin-workspaces = false
show-urgent = true
fuzzy-match = true
enable-scroll = true
format = <label-state>

ws-icon-0 = 1;1 
ws-icon-1 = 2;2 
ws-icon-2 = 3;3 
ws-icon-3 = 4;4 
ws-icon-4 = 5;5 
ws-icon-5 = 0;10 

ws-icon-default = 


label-focused = %icon%
label-focused-background = ${colors.background-alt}
label-focused-foreground = ${colors.foreground-alt}
label-focused-padding = 2

label-urgent = %icon%
label-urgent-background = ${colors.red}
label-urgent-padding = 2

label-unfocused = %icon%
label-unfocused-padding = 2
label-unfocused-foreground = ${colors.background-alt}
label-unfocused-background = ${colors.foreground-alt}


label-visible = %icon%
label-visible-padding = 2


[module/media-previous]
type = custom/text
content = 
click-left = playerctl previous

[module/media-play]
type = custom/text
content = 
click-left = playerctl play-pause

[module/media-next]
type = custom/text
content = 
click-left = playerctl next

[module/media]
type = custom/script
interval = 1
format-prefix = "  "
format-foreground = ${colors.foreground-alt}
format-background = ${colors.background-alt}

format = <label>
format-padding = 2

exec = playerctl metadata --format '{{status}} {{artist}} - {{title}}'
exec-if=playerctl status 2>/dev/null | egrep -q "Playing|Paused"

click-left = playerctl play-pause
click-right = playerctl next
scroll-up = playerctl volume 0.1+
scroll-down = playerctl volume 0.1-



[module/xwindow]
label-font=0
type = internal/xwindow
format = <label>
label = %title:0:45s:...%


[module/pulseaudio]
type = internal/pulseaudio

use-ui-max = false

format-volume = <ramp-volume> <label-volume>
ramp-volume-foreground = ${colors.foreground}

label-volume = %percentage%%

label-muted = 婢 Muted
label-muted-foreground = ${colors.disabled}

ramp-volume-0 = 奄 
ramp-volume-1 = 奔
ramp-volume-2 = 奔
ramp-volume-3 = 奔
ramp-volume-4 = 奔
ramp-volume-5 = 墳
ramp-volume-6 = 墳
ramp-volume-7 = 墳
ramp-volume-8 = 墳
ramp-volume-9 = 墳
ramp-volume-10 = 墳

click-right = pavucontrol



[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock
blacklist-1 = scroll lock

label-layout = "%layout%"
format-prefix =  "  "
format-prefix-foreground = ${colors.foreground} 
label-layout-foreground = ${colors.foreground}

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-foreground = ${colors.background}
label-indicator-background = ${colors.background-alt}


[module/date]
type = internal/date
interval = 1

date = %a %I:%M %p 
date-alt = %d/%d/%Y

label = %date%
label-foreground = ${colors.foreground}

format = %{A3:gnome-calendar:} <label> %{A}
# format-prefix = "" 
format-prefix-foreground = ${colors.foreground}

click-right = gnome-calendar

[settings]
screenchange-reload = true
pseudo-transparency = false



[module/battery]
type = internal/battery

full-at = 100
; low-at = 35

battery = BAT0
adapter = ACAD

; plugged icon 
format-charging = <animation-charging>   <label-charging>
format-discharging = <ramp-capacity>   <label-discharging>

label-charging = %percentage%%
label-discharging = %percentage%%

format-full = <label-full>
format-full-prefix = "   "
format-full-prefix-foreground = ${colors.foreground}   
format-low = <label-low> <ramp-capacity>

label-full = %percentage%%
label-low = %percentage%%

; Only applies if <ramp-capacity> is used
ramp-capacity-0 =  
ramp-capacity-1 =  
ramp-capacity-2 =  
ramp-capacity-3 =  
ramp-capacity-4 =  
ramp-capacity-5 =  
ramp-capacity-6 =  
ramp-capacity-7 =  
ramp-capacity-8 =  
ramp-capacity-9 =   
ramp-capacity-10 =  
ramp-capacity-foreground = ${colors.foreground}  

; Only applies if <animation-charging> is used
animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-framerate = 1000
animation-charging-foreground = ${colors.foreground}

; Only applies if <animation-discharging> is used
animation-discharging-0 = 
animation-discharging-1 = 
animation-discharging-2 = 
animation-discharging-3 = 
animation-discharging-4 = 
animation-discharging-framerate = 1500

; Only applies if <animation-low> is used
animation-low-0 = !
animation-low-1 = 
animation-low-framerate = 200

; If an inotify event haven't been reported in this many
; seconds, manually poll for new values
poll-interval = 5


[network-base]
type = internal/network
interval = 1
;format-disconnected = <label-disconnected>
;label-disconnected = %{F#0F398B}%ifname%%{F#8F877F} disconnected
;label-disconnected =

[module/wlan]
type = internal/network
interval = 1
interface = wlp9s0
interface-type = wireless
ifexists = true
format-connected = <label-connected> <ramp-signal>
; format-diconnected = <label-connected>
; label-connected = %essid%

label-connected = "%{A1:~/.bin/networkmanager_dmenu &:}%essid%%{A}"

ramp-signal-0 = 󰤯
ramp-signal-1 = 󰤟
ramp-signal-2 = 󰤢
ramp-signal-3 = 󰤥
ramp-signal-4 = 󰤨







